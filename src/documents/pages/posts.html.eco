---
title: Posts
layout: page
pageOrder: 2
dynamic: true
---

<nav class="linklist">
<% for document in @getCollection('posts').createChildCollection().setPaging({limit:5,page:@req.query.page or 1}).query().toJSON(): %>
		<li><span><%= document.date.toShortDateString() %></span>
		&raquo;
		<a href="<%= document.url %>"><%= document.title %></a></li>
      <%- document.contentRenderedWithoutLayouts %>
	<% end %>
</nav>
